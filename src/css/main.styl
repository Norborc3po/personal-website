// background-color = #02161d
text-color = #829395
prompt-color = #d93435

pre, label, input, a, span, div
    margin: 0
    padding: 0

terminal-font()
    font-family: monaco, Consolas, 'Lucida Console', monospace
    font-size: 13px
    line-height: 21px

html
    background-color: background-color
    height: 100%

body
    height: 100%
    terminal-font()

a, pre, input
    color: text-color

#root
    margin-top: 30px
    margin-left: 20px
    margin-right: 20px

#terminal
    pre
        display: inline-block
        white-space: pre-wrap

    pre, input
        terminal-font()        

.cli-input
        padding: 0
        border: none
        outline: none
        background: transparent
.prompt
    color: prompt-color    

.line
    terminal-font()

.line-normal
    // margin-left: 25px

div.mobile-block
    display: flex
    flex-wrap: wrap-reverse
    align-items: center
    margin: 50px 0    
    
    .mobile-block-text
        max-width: 400px
        margin-bottom: 25px
    
    .mobile-block-title
        color: prompt-color
        margin-bottom: 15px

.input-form
    padding-bottom: 20px

.phone-image
    margin-right: 30px
    width: 250px